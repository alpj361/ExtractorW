      console.log(`   ‚úÖ Categor√≠a: ${category}`);
      console.log(`   üéØ Relevancia: ${aboutInfo.relevancia}`);
      console.log(`   üåç Contexto local: ${aboutInfo.contexto_local ? 'S√≠' : 'No'}`);
