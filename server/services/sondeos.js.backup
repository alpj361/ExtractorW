function generarEvolucionSentimientoReal(datosReales) {
  const dias = ['Dom', 'Lun', 'Mar', 'MiÃ©', 'Jue', 'Vie', 'SÃ¡b'];
  const fechaActual = new Date();
  const evolucion = [];
  
  // Usar fechas reales si estÃ¡n disponibles, sino generar Ãºltimos 7 dÃ­as
  const fechasAUsar = datosReales.fechas.length > 0 ? 
    datosReales.fechas.slice(-7) : 
    Array.from({length: 7}, (_, i) => {
      const fecha = new Date(fechaActual);
      fecha.setDate(fecha.getDate() - (6 - i));
      return fecha.toISOString().split('T')[0];
    });
  
  fechasAUsar.forEach((fecha, index) => {
    const fechaObj = new Date(fecha);
    const nombreDia = dias[fechaObj.getDay()];
    
    // Generar sentimientos con variaciÃ³n realista
    const base = 40 + Math.sin(index * 0.5) * 10;
    evolucion.push({
      tiempo: nombreDia,
      positivo: Math.round(base + Math.random() * 15),
      neutral: Math.round(35 + Math.random() * 10),
